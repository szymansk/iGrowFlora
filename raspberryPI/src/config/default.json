			}
		}
	},
	"sensor": {
		"topic": "nodemcu",
		"moisture": {
			"topic": "soilMoisture"
		},
		"msgTemplate": {
			"ID": "",
			"timeStamp": {
				"sec": "",
				"usec": ""
			},
			"sensorReadings": {
				"soilmoisture": ""
			}
		}
	},
	"cronTab": {
