			"threshold": 500,
			"controller": "timer" // or "moisture"
		},
		"3": {
			"GPIO": 21,
			"sensorID": 2272926,
			"threshold": 450,
			"controller": "timer" // or "moisture"
		},
		"MOCKUP": {
			"GPIO": 9999,
			"sensorID": 2329074,
			"threshold": 500,
			"controller": "timer" // or "moisture"
		}
	},
	"controller": {
		"topic": "controller",
		"threshold": 600,
		"timeout": 10000,
		"timer": {
			"topic": "timer",
			"msgTemplate": {
				"intervall": "", // interval in ms
				"volume": "", // milliliter in ms
				"valve": ""
			}
		},
		"volume": {
			"topic": "volume",
			"milliliterPerMS": 0.0323,
			"msgTemplate": {
				"intervall": "", // interval in ms
				"volume": "", // milliliter in ms
